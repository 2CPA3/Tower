import java.awt.Color;
import java.awt.Graphics;

import javax.swing.JFrame;
import javax.swing.JPanel;

class MyFrame extends JFrame {
	public MyFrame() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(1000,600);
		setTitle("자동차 그리기");
		add(new Car());
		setVisible(true);
	}
}
class Car extends JPanel{
	Color color = new Color(0, 0, 0);
	int x,y,a,b,c,d;
	// x,y 는 랜덤한 위치
	// a,b 는 몸통의 랜덤한 크기
	// c,d 는 랜덤으로 만들어진 a의 값을 저장하는 변수 c=바퀴, d는 창문
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		for(int i = 0; i < 4; i++) {
			color = new Color((int)((Math.random()*200))
					,(int)((Math.random()*200)),(int)(Math.random()*200));
			x = (int)(Math.random()*800);
			y = (int)(Math.random()*400);
			a = (int)(Math.random()*100);
			b = (int)(Math.random()*50);
			
			c = a+80;
			d = b+50;
			g.fillRect(10+x,  50+y,  a+100,  b+50);
			// 자동차 몸체
			g.setColor(color.WHITE);
			g.fillRect(15+x,  60+y,  20,  20);
			g.fillRect(40+x,  60+y,  20,  20);
			// 자동차 창문
			g.setColor(color.BLACK);
			g.fillOval(10+x,  b+100+y,  30,  30);
			g.fillOval(c+x,  b+100+y, 30, 30);
			// 자동차 바퀴
			
		}
	}
 }
public class Test {

	public static void main(String[] args) {
		MyFrame g = new MyFrame();

	}

}
